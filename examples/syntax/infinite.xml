<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE language SYSTEM "language.dtd"
  [
  
  ]>

<language 
    name="Infinite" 
    version="1" 
    kateversion="3.10" 
    section="Other" 
    extensions="*.txt" 
    mimetype="text/x-test-infinite" 
    casesensitive="1" 
    author="Bruno Vasselle (bruno.vasselle@laposte.net)" 
    license="LGPL"
  >
  
  <highlighting>
    <contexts>
      <context 
	  name="Depth 0"
	  attribute="Normal Text"
	  lineEndContext="#stay">
        
	<StringDetect
	    String="infinite 0"
	    lookAhead='true'
            context='Depth 1'
	  />
	
	<StringDetect	
	    String="nfinite" 		
	    context='Detect'
	  />
	
      </context>
      
      <context name="Depth 1" >
        <StringDetect   
            String="infinite 0"
            lookAhead='true'
            context='Depth 2'
          />
      </context>
      
      <context name="Depth 2" >
        <StringDetect   
            String="infinite 0"
            lookAhead='true'
            context='Depth 0'
          />
      </context>
      
      <context name='Detect' attribute='Detect' lineEndContext="#pop"/>
      
    </contexts>
    
    <itemDatas>
      <itemData name="Normal Text" 	defStyleNum="dsNormal" 		/>
      <itemData name="Detect" 		defStyleNum="dsNormal" 		bold="1" 	/>
    </itemDatas>
    
  </highlighting>
  
  <general>
    <indentation mode="normal" />
  </general>
</language>
